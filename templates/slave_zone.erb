  type slave;
  file "<%= @db_file %>";
  masters {
  <%- @servers.each do |server| -%>
    <%= server %>;
  <%- end -%>
  };
  <%- if @transfer_hosts.length > 0 -%>
  allow-transfer {
  <%- @transfer_hosts.each do |host| -%>
    <%= host %>;
  <%- end -%>
  };
  <%- end -%>
  <%- if @enable_notify -%>
  notify yes;
  <%- else -%>
  notify no;
  <%- end -%>
