  type slave;
  file "<%= @zone_file %>";
  masters {
  <%- Array(@servers).each do |server| %>
    <%= server %>;
  <%- end %>
  };
  <%- if Array(@transfer_hosts).length > 0 %>
  allow-transfer {
  <%- Array(@transfer_hosts).each do |host| %>
    <%= host %>;
  <%- end %>
  };
  <%- end %>
  <%- if @enable_notify %>
  notify yes;
  <%- else %>
  notify no;
  <%- end %>
